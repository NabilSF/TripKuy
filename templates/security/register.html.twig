                    <!-- Hair -->
                    <path
                        d="M 230 120 Q 230 100 250 105 Q 270 100 270 120"
                        fill="#8B5CF6" />
                    <circle cx="245" cy="105" r="8" fill="#8B5CF6" />
                    <circle cx="255" cy="105" r="8" fill="#8B5CF6" />

                    <!-- Body -->
                    <rect
