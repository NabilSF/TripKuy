                        fill="#60A5FA" />

                    <!-- Chair -->
                    <rect
                        x="235"
                        y="205"
                        width="30"
                        height="8"
                        fill="#4F46E5"
                        rx="4" />
                    <rect
                        x="247"
                        y="213"
                        width="6"
                        height="25"
                        fill="#6B7280" />
                    <circle cx="250" cy="245" r="12" fill="#4F46E5" />

                    <!-- Plant -->
                    <ellipse
                        cx="100"
                        cy="195"
                        rx="10"
                        ry="5"
                        fill="#8B5CF6" />
                    <path
                        d="M 100 195 Q 95 185 98 175 Q 100 185 102 175 Q 105 185 100 195"
                        fill="#10B981" />

                    <!-- Coffee -->
                    <rect
                        x="310"
                        y="175"
                        width="20"
                        height="25"
                        fill="#EF4444"
                        rx="3" />
                    <ellipse
                        cx="320"
                        cy="173"
                        rx="10"
                        ry="3"
                        fill="#DC2626" />
                    <path
                        d="M 330 183 Q 335 183 335 188 Q 335 193 330 193"
                        stroke="#EF4444"
                        stroke-width="2"
                        fill="none" />
                </svg>
            </div>

            <!-- Text -->
            <h2 class="text-4xl font-bold text-white mb-4">
                Sign up to name
            </h2>
            <p class="text-blue-200 text-lg">Lorem Ipsum is simply</p>
        </div>
    </div>
</div>

{% endblock %}
