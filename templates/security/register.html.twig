                            <input type="password" name="password" id="password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" class="w-full pl-8 pr-10 py-3 outline-none bg-transparent" required />
                            <button type="button" onclick="togglePass('password', 'eye1')" class="absolute right-2 top-3 text-gray-400 hover:text-blue-600">
