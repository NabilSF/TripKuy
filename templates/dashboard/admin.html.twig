{% extends 'base.html.twig' %}

{% block body %}
<div class="flex min-h-screen bg-[#111827] text-white">
    
    {# PINDAHKAN KE SINI: Agar masuk ke dalam sistem flexbox #}
    {% include "sidebar.html.twig" %}

    <main class="flex-1 p-10">
        <h2 class="text-3xl font-bold mb-8">Statistik Global</h2>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
            <div class="bg-[#1f2937] p-6 rounded-3xl border border-gray-800">
                <p class="text-gray-500 text-xs font-bold uppercase mb-2">Total Kamar Terdaftar</p>
                <p class="text-3xl font-black text-[#2aa090]">1,240</p>
            </div>
            <div class="bg-[#1f2937] p-6 rounded-3xl border border-gray-800">
                <p class="text-gray-500 text-xs font-bold uppercase mb-2">Permintaan Pembatalan</p>
                <p class="text-3xl font-black text-red-500">12</p>
            </div>
        </div>

        {# ... Sisa kode tabel dan log pembatalan tetap sama ... #}
        <div class="bg-[#1f2937] rounded-3xl border border-gray-800 overflow-hidden mb-12">
            <div class="p-6 border-b border-gray-800 flex justify-between items-center">
                <h3 class="font-bold">Monitoring Tipe Kamar</h3>
                <button class="bg-[#2aa090] text-sm px-4 py-2 rounded-lg font-bold">+ Tambah Tipe</button>
            </div>
            <table class="w-full text-left">
                <thead class="bg-gray-800/50 text-[10px] text-gray-500 uppercase">
                    <tr>
                        <th class="p-6">Tipe Kamar</th>
                        <th class="p-6">Harga</th>
                        <th class="p-6">Kapasitas</th>
                        <th class="p-6">Stok Kamar</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-800 text-sm">
                    {% for tipe in all_tipe_kamar %}
                    <tr>
                        <td class="p-6 font-semibold">{{ tipe.namaKamar }}</td>
                        <td class="p-6">Rp {{ tipe.harga|number_format(0,',','.') }}</td>
                        <td class="p-6">{{ tipe.kapasitasOrang }} Orang</td>
                        <td class="p-6 text-[#2aa090] font-bold">{{ tipe.totalKamar }} Unit</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
</div>
{% endblock %}