{% extends 'base.html.twig' %}

{% block body %}
<div class="flex min-h-screen bg-[#111827] text-white">
    <aside class="w-64 bg-[#1f2937] border-r border-gray-800 p-6">
        <h2 class="text-xl font-black text-[#2aa090] mb-10">ADMIN PANEL</h2>
        <nav class="space-y-4">
            <a href="#" class="block p-4 bg-gray-800 rounded-xl text-[#2aa090] font-bold">Overview</a>
            <a href="#" class="block p-4 hover:bg-gray-800 rounded-xl transition-all">Manajemen Hotel</a>
            <a href="#" class="block p-4 hover:bg-gray-800 rounded-xl transition-all">Data User</a>
            <a href="#" class="block p-4 hover:bg-gray-800 rounded-xl transition-all">Laporan Keuangan</a>
        </nav>
    </aside>

    <main class="flex-1 p-10">
        <h2 class="text-3xl font-bold mb-8">Statistik Global</h2>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
            <div class="bg-[#1f2937] p-6 rounded-3xl border border-gray-800">
                <p class="text-gray-500 text-xs font-bold uppercase mb-2">Total Kamar Terdaftar</p>
                {# Logika menjumlahkan totalKamar dari semua TipeKamar #}
                <p class="text-3xl font-black text-[#2aa090]">1,240</p>
            </div>
            <div class="bg-[#1f2937] p-6 rounded-3xl border border-gray-800">
                <p class="text-gray-500 text-xs font-bold uppercase mb-2">Permintaan Pembatalan</p>
                <p class="text-3xl font-black text-red-500">12</p>
            </div>
        </div>

        <div class="bg-[#1f2937] rounded-3xl border border-gray-800 overflow-hidden mb-12">
            <div class="p-6 border-b border-gray-800 flex justify-between items-center">
                <h3 class="font-bold">Monitoring Tipe Kamar</h3>
                <button class="bg-[#2aa090] text-sm px-4 py-2 rounded-lg font-bold">+ Tambah Tipe</button>
            </div>
            <table class="w-full text-left">
                <thead class="bg-gray-800/50 text-[10px] text-gray-500 uppercase">
                    <tr>
                        <th class="p-6">Tipe Kamar</th>
                        <th class="p-6">Harga</th>
                        <th class="p-6">Kapasitas</th>
                        <th class="p-6">Stok Kamar</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-800 text-sm">
                    {% for tipe in all_tipe_kamar %}
                    <tr>
                        <td class="p-6 font-semibold">{{ tipe.namaKamar }}</td>
                        <td class="p-6">Rp {{ tipe.harga|number_format(0,',','.') }}</td>
                        <td class="p-6">{{ tipe.kapasitasOrang }} Orang</td>
                        <td class="p-6 text-[#2aa090] font-bold">{{ tipe.totalKamar }} Unit</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="bg-[#1f2937] rounded-3xl border border-gray-800 p-6">
            <h3 class="font-bold mb-6 text-red-400">Log Pembatalan Masuk</h3>
            <div class="space-y-4">
                {% for batal in all_pembatalan %}
                <div class="flex justify-between items-center p-4 bg-gray-800/30 rounded-2xl border border-gray-800">
                    <div>
                        <p class="text-sm font-bold text-gray-200">Alasan: {{ batal.alasan }}</p>
                        <p class="text-[10px] text-gray-500">Diajukan: {{ batal.tanggalPengajuan|date('d M Y') }}</p>
                    </div>
                    <div class="flex gap-2">
                        <button class="text-xs bg-red-500/10 text-red-500 px-3 py-1 rounded-md border border-red-500/20">Tolak</button>
                        <button class="text-xs bg-green-500 text-white px-3 py-1 rounded-md">Proses Refund</button>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
</div>
{% endblock %}
