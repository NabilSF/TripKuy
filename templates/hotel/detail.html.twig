{% extends 'base.html.twig' %}

{% block title %}Detail {{ hotel.namaHotel }}{% endblock %}

{% block body %}
{% include 'header.html.twig' %}

<main class="max-w-[1400px] mx-auto px-6 lg:px-10 pt-28 pb-20">

    {# ===== HEADER HOTEL ===== #}
    <div class="mb-10">
        <h1 class="text-3xl md:text-5xl font-bold mb-4 text-gray-900">
            {{ hotel.namaHotel }}
        </h1>

        <div class="flex flex-wrap items-center gap-6 text-gray-600 mb-6">
            <div class="flex items-center gap-2">
                <i class="fas fa-map-marker-alt text-[#2aa090]"></i>
                <span>{{ hotel.alamat }}</span>
            </div>
            <div class="flex items-center gap-2">
                <i class="fas fa-phone text-[#2aa090]"></i>
                <span>{{ hotel.kontak }}</span>
            </div>
        </div>

        <p class="text-gray-700 text-lg max-w-4xl leading-relaxed italic border-l-4 border-[#2aa090] pl-6">
            "{{ hotel.deskripsi }}"
        </p>
    </div>

    {# ===== GALERI FOTO (RASIO AMAN) ===== #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-12">

        {# Gambar utama 16:9 #}
        <div class="md:col-span-2 rounded-3xl overflow-hidden shadow-lg aspect-[16/9] group">
            <img
                src="https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?auto=format&fit=crop&w=1200&q=80"
                alt="Main View"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
            >
        </div>

        {# Gambar samping #}
        <div class="grid grid-cols-2 md:grid-cols-1 gap-4">

            <div class="rounded-3xl overflow-hidden shadow-md aspect-[4/3]">
                <img
                    src="https://images.unsplash.com/photo-1571896349842-33c89424de2d?auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover"
                >
            </div>

            <div class="rounded-3xl overflow-hidden shadow-md aspect-[4/3] relative group">
                <img
                    src="https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover"
                >
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <span class="text-white font-bold">Lihat Semua Foto</span>
                </div>
            </div>

        </div>
    </div>

    {# ===== KONTEN ===== #}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">

        {# ===== DAFTAR KAMAR ===== #}
        <div class="lg:col-span-2 space-y-8">

            <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-3">
                <span class="w-2 h-8 bg-[#2aa090] rounded-full"></span>
                Tipe Kamar Tersedia
            </h2>

            {% for kamar in tipeKamars %}
                <div class="bg-white border border-gray-100 rounded-[2rem] p-6 shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col md:flex-row gap-8">
                    {% set gambar = kamar.gambarKamars|first %}
                    <div class="md:w-1/3 aspect-[4/3] rounded-2xl overflow-hidden shrink-0">
                        <img
                            src="/images/{{ gambar.filename }}"
                            alt="{{ kamar.namaKamar }}"
                            class="w-full h-full object-cover"
                        >
                    </div>

                    <div class="flex-1 flex flex-col justify-between py-2">
                        <div>
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-2xl font-bold text-gray-800">
                                        {{ kamar.namaKamar }}
                                    </h3>
                                    <div class="flex items-center gap-3 mt-1 text-gray-500 text-sm">
                                        <span>
                                            <i class="fas fa-user-friends"></i>
                                            {{ kamar.kapasitasOrang }} Orang
                                        </span>
                                        <span>â€¢</span>
                                        <span>
                                            <i class="fas fa-bed"></i>
                                            {{ kamar.totalKamar }} Unit
                                        </span>
                                    </div>
                                </div>

                                <div class="text-right">
                                    <div class="text-2xl font-black text-[#2aa090]">
                                        Rp {{ kamar.harga|number_format(0, ',', '.') }}
                                    </div>
                                    <div class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">
                                        Per Malam
                                    </div>
                                </div>
                            </div>

                            <p class="text-gray-600 text-sm leading-relaxed line-clamp-2">
                                {{ kamar.deskripsi }}
                            </p>
                        </div>

                        <div class="flex items-center justify-between pt-6 border-t border-gray-50 mt-6">
                            <div class="flex gap-4 text-gray-300">
                                <i class="fas fa-wifi"></i>
                                <i class="fas fa-snowflake"></i>
                                <i class="fas fa-utensils"></i>
                            </div>

                            <button
                                onclick="bookRoom({{ kamar.id }})"
                                class="bg-[#2aa090] hover:bg-black text-white px-8 py-3 rounded-xl font-bold transition-all shadow-lg shadow-[#2aa090]/20 active:scale-95"
                            >
                                Pilih Kamar
                            </button>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="p-20 text-center bg-gray-50 rounded-3xl border-2 border-dashed border-gray-200">
                    <p class="text-gray-400 font-medium">
                        Belum ada tipe kamar yang didaftarkan.
                    </p>
                </div>
            {% endfor %}
        </div>

        {# ===== SIDEBAR TANGGAL ===== #}
        <div class="relative">
            <div class="bg-white border border-gray-100 rounded-[2.5rem] p-8 shadow-2xl sticky top-28 overflow-hidden">

                <h4 class="font-bold text-gray-800 mb-8 flex items-center gap-2">
                    <i class="fas fa-calendar-alt text-[#2aa090]"></i>
                    Cek Tanggal
                </h4>

                <div class="space-y-6">
                    <div>
                        <label class="block text-[10px] font-black text-gray-400 mb-2 uppercase">
                            Check-in
                        </label>
                        <input
                            type="date"
                            id="checkin"
                            value="{{ checkin }}"
                            min="{{ "now"|date("Y-m-d") }}"
                            class="w-full p-4 bg-gray-50 rounded-2xl text-sm font-bold focus:ring-2 focus:ring-[#2aa090]"
                        >
                    </div>

                    <div>
                        <label class="block text-[10px] font-black text-gray-400 mb-2 uppercase">
                            Check-out
                        </label>
                        <input
                            type="date"
                            id="checkout"
                            value="{{ checkout }}"
                            class="w-full p-4 bg-gray-50 rounded-2xl text-sm font-bold focus:ring-2 focus:ring-[#2aa090]"
                        >
                    </div>
                </div>

                <div class="mt-10 p-5 bg-blue-50 rounded-2xl border border-blue-100">
                    <p class="text-[11px] text-blue-600">
                        <i class="fas fa-info-circle mr-1"></i>
                        Harga dapat berubah tergantung musim & ketersediaan.
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    const cin = document.getElementById('checkin');
    const cout = document.getElementById('checkout');

    function syncDates() {
        const d = new Date(cin.value);
        d.setDate(d.getDate() + 1);
        const minOut = d.toISOString().split('T')[0];
        cout.min = minOut;
        if (cout.value <= cin.value) cout.value = minOut;
    }

    cin.addEventListener('change', syncDates);
    window.addEventListener('load', syncDates);

    function bookRoom(roomId) {
        if (!cin.value || !cout.value) {
            alert('Pilih tanggal dulu!');
            return;
        }
        window.location.href =
            `/reservasi/{{ hotel.id }}`;
    }
</script>

{% include 'footer.html.twig' %}
{% endblock %}
