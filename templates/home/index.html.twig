{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    <style>
        .hide-scrollbar::-webkit-scrollbar { display: none; }
        .hide-scrollbar { -ms-verflow-style: none; scrollbar-width: none; }
    </style>


{% endblock %}


{% block body %}
{% include 'header.html.twig' %}

<section class="relative bg-gradient-to-br from-[#1d856e] to-[#2a75a0] py-20 px-10 overflow-hidden text-center text-white">
    <div class="absolute inset-0 opacity-20 pointer-events-none">
        <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=1920" class="w-full h-full object-cover" alt="">
    </div>

    <div class="relative z-10 max-w-3xl mx-auto">
        <h1 class="text-3xl md:text-5xl font-bold mb-4">Dunia Adalah Tempatmu Berpijak</h1>
        <p class="text-lg md:text-xl text-gray-200 mb-8 font-light">
            Pengalaman menginap tak terlupakan dengan fasilitas premium
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-5">
            <div class="text-sm font-medium"><i class="fas fa-shield-alt mr-2"></i> Keamanan Terjamin</div>
            <div class="text-sm font-medium"><i class="fas fa-star mr-2 text-yellow-400"></i> Rating 4.8+</div>
            <div class="text-sm font-medium"><i class="fas fa-headset mr-2"></i> Dukungan 24/7</div>
        </div>
    </div>
</section>

<section class="relative -mt-10 px-5 md:px-10 mb-10">
    <div class="max-w-4xl mx-auto bg-white rounded-3xl md:rounded-full shadow-xl p-3 border border-gray-100">
        <form class="flex flex-col md:flex-row items-center gap-2">
            <div class="flex-1 w-full px-5 py-2 hover:bg-gray-50 rounded-full transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-text-light font-bold">Lokasi</label>
                <input type="text" placeholder="Ke mana?" class="w-full bg-transparent outline-none text-sm font-semibold placeholder:font-normal">
            </div>
            <div class="hidden md:block w-px h-8 bg-gray-200"></div>
            <div class="flex-1 w-full px-5 py-2 hover:bg-gray-50 rounded-full transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-text-light font-bold">Check-in</label>
                <input type="date" class="w-full bg-transparent outline-none text-sm font-semibold">
            </div>
            <div class="flex-1 w-full px-5 py-2 hover:bg-gray-50 rounded-full transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-text-light font-bold">Check-out</label>
                <input type="date" class="w-full bg-transparent outline-none text-sm font-semibold">
            </div>
            <div class="flex-1 w-full px-5 py-2 hover:bg-gray-50 rounded-full transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-text-light font-bold">Tamu</label>
                <input type="number" value="1" class="w-full bg-transparent outline-none text-sm font-semibold">
            </div>
            <button class="bg-primary hover:bg-primary-dark w-full md:w-auto text-white px-8 py-4 rounded-full flex items-center justify-center gap-3 font-semibold transition-all">
                <i class="fas fa-search bg-white text-primary rounded-full p-2 text-xs"></i> Cari
            </button>
        </form>
    </div>
</section>

<div class="max-w-[1400px] mx-auto px-10 mb-8">
    <div class="flex gap-4 border-b border-gray-200 pb-4 overflow-x-auto hide-scrollbar">
        <button class="filter-tab active flex items-center gap-2 px-6 py-3 rounded-full bg-text-dark text-white text-sm font-semibold border border-text-dark transition-all whitespace-nowrap">
            <i class="fas fa-hotel"></i> Semua
        </button>
        <button class="filter-tab flex items-center gap-2 px-6 py-3 rounded-full bg-white text-text-dark text-sm font-medium border border-gray-300 hover:bg-gray-50 transition-all whitespace-nowrap">
            <i class="fas fa-crown"></i> Luxury
        </button>
        <button class="filter-tab flex items-center gap-2 px-6 py-3 rounded-full bg-white text-text-dark text-sm font-medium border border-gray-300 hover:bg-gray-50 transition-all whitespace-nowrap">
            <i class="fas fa-umbrella-beach"></i> Resort
        </button>
        <button class="filter-tab flex items-center gap-2 px-6 py-3 rounded-full bg-white text-text-dark text-sm font-medium border border-gray-300 hover:bg-gray-50 transition-all whitespace-nowrap">
            <i class="fas fa-home"></i> Villa
        </button>
    </div>
</div>

<div class="max-w-[1400px] mx-auto px-10 pb-20">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">

        {% for hotel in hotels %}
            {% set kamar = hotel.tipeKamars|first %}

            <div class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative h-56 overflow-hidden">
                    <img
                        src="{{ hotel.gambar ?? 'https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?auto=format&fit=crop&w=800&q=80' }}"
                        alt="{{ hotel.namaHotel }}"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    >

                    <button class="wishlist-btn absolute top-4 right-4 bg-white/90 p-2 rounded-full w-9 h-9 flex items-center justify-center hover:scale-110 transition-all">
                        <i class="far fa-heart"></i>
                    </button>

                    <div class="absolute bottom-4 left-4 bg-black/70 text-white px-3 py-1 rounded-md text-sm font-semibold flex items-center gap-1">
                        <i class="fas fa-star text-yellow-400"></i> 4.5
                    </div>
                </div>

                <div class="p-5">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="text-sm font-bold leading-tight flex-1">
                            {{ hotel.namaHotel }}
                        </h3>

                        {% if kamar %}
                            <div class="text-primary font-bold text-lg">
                                Rp{{ kamar.harga|number_format(0, ',', '.') }}
                                <span class="text-xs text-text-light font-normal">/malam</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="flex items-center gap-2 text-text-light text-xs font-medium mb-3">
                        <i class="fas fa-map-marker-alt text-primary"></i>
                        {{ hotel.alamat }}
                    </div>

                    <p class="text-xs text-text-dark line-clamp-2 mb-4">
                        {{ hotel.deskripsi }}
                    </p>

                    {% if kamar %}
                        <div class="flex flex-wrap gap-2 pt-4 border-t border-gray-100 mb-4 text-[11px] text-text-light font-medium">
                            <span class="flex items-center gap-1">
                                <i class="fas fa-bed text-primary"></i>
                                {{ kamar.namaKamar }}
                            </span>
                            <span class="flex items-center gap-1">
                                <i class="fas fa-user text-primary"></i>
                                {{ kamar.kapasitasOrang }} orang
                            </span>
                        </div>
                    {% endif %}

                    <a href="{{ path('hotel_detail', {id: hotel.id}) }}"
                       class="inline-block w-full text-center bg-primary hover:bg-primary-dark text-white py-3 rounded-xl font-semibold text-sm transition-colors">
                        Lihat Detail
                    </a>
                </div>
            </div>

        {% else %}
            <div class="col-span-full text-center text-gray-500">
                Data hotel tidak tersedia
            </div>
        {% endfor %}

    </div>

</div>

