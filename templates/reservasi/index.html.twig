{% extends 'base.html.twig' %}

{% block title %}Reservasi - {{ hotel.namaHotel }}{% endblock %}

{% block body %}
<main class="max-w-6xl mx-auto px-4 pt-28 pb-20 font-sans text-gray-900">
    <div class="mb-10">
        <span class="bg-[#2aa090]/10 text-[#2aa090] px-4 py-1 rounded-full text-xs font-bold uppercase tracking-widest">Langkah 1: Pilih Kamar</span>
        <h1 class="text-4xl font-black mt-4">{{ hotel.namaHotel }}</h1>
        <p class="text-gray-500 mt-1"><i class="fas fa-map-marker-alt mr-2 text-[#2aa090]"></i>{{ hotel.alamat }}</p>
    </div>

    <form action="{{ path('reservasi_checkout', {'id': hotel.id}) }}" method="POST" id="bookingForm" class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        <div class="lg:col-span-2 space-y-4">
            <h3 class="text-xl font-bold mb-4">Tipe Kamar Tersedia</h3>

            {% for kamar in kamarList %}
                <label class="room-card relative block bg-white border-2 border-gray-100 rounded-[2rem] p-6 cursor-pointer hover:border-[#2aa090]/50 transition-all duration-300">
                    <input type="radio" name="tipe_kamar" value="{{ kamar.id }}"
                           class="room-radio absolute top-6 right-6 w-6 h-6 accent-[#2aa090]"
                           data-harga="{{ kamar.harga }}"
                           {% if selectedRoom and selectedRoom.id == kamar.id %}checked{% endif %} required>

                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                        <div class="pr-10">
                            <h4 class="text-xl font-bold">{{ kamar.namaKamar }}</h4>
                            <p class="text-sm text-gray-500 line-clamp-2 mt-1">{{ kamar.deskripsi }}</p>

                            <div class="flex gap-6 mt-4">
                                <span class="flex items-center text-xs font-semibold text-gray-400">
                                    <i class="fas fa-users mr-2 text-[#2aa090]"></i> {{ kamar.kapasitasOrang }} Orang
                                </span>
                                <span class="flex items-center text-xs font-semibold text-gray-400">
                                    <i class="fas fa-bed mr-2 text-[#2aa090]"></i> Stok: {{ kamar.totalKamar }} Unit
                                </span>
                            </div>
                        </div>
                        <div class="md:text-right flex-shrink-0">
                            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Mulai Dari</p>
                            <p class="text-2xl font-black text-[#2aa090]">Rp {{ kamar.harga|number_format(0, ',', '.') }}</p>
                            <p class="text-[10px] text-gray-400">/malam/kamar</p>
                        </div>
                    </div>
                </label>
            {% endfor %}
        </div>

        <div class="lg:col-span-1">
            <div class="bg-gray-900 rounded-[2.5rem] p-8 sticky top-28 text-white shadow-2xl border border-gray-800">
                <h3 class="text-xl font-bold mb-6 flex items-center">
                    <i class="fas fa-calendar-check mr-3 text-[#2aa090]"></i> Atur Pesanan
                </h3>

                <div class="space-y-5">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="text-[10px] font-black text-gray-500 uppercase mb-2 block">Check-in</label>
                            <input type="date" name="checkin" id="checkin" value="{{ checkin }}"
                                   class="w-full bg-gray-800 border-none rounded-xl text-xs py-3 focus:ring-2 focus:ring-[#2aa090]">
                        </div>
                        <div>
                            <label class="text-[10px] font-black text-gray-500 uppercase mb-2 block">Check-out</label>
                            <input type="date" name="checkout" id="checkout" value="{{ checkout }}"
                                   class="w-full bg-gray-800 border-none rounded-xl text-xs py-3 focus:ring-2 focus:ring-[#2aa090]">
                        </div>
                    </div>

                    <div>
                        <label class="text-[10px] font-black text-gray-500 uppercase mb-2 block">Jumlah Kamar</label>
                        <div class="flex items-center bg-gray-800 rounded-xl px-4 py-2">
                            <i class="fas fa-door-open text-gray-500 mr-3"></i>
                            <input type="number" name="jumlah_kamar" id="jumlah_kamar" value="1" min="1" max="5"
                                   class="bg-transparent border-none w-full text-sm focus:ring-0">
                        </div>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-gray-800 space-y-3">
                    <div class="flex justify-between text-sm text-gray-400">
                        <span>Durasi</span>
                        <span id="displayNights">0 Malam</span>
                    </div>
                    <div class="flex justify-between items-center pt-2">
                        <span class="text-sm font-bold">Estimasi Total</span>
                        <span id="displayTotal" class="text-2xl font-black text-[#2aa090]">Rp 0</span>
                    </div>
                </div>

                <button type="submit" class="w-full mt-8 py-5 bg-[#2aa090] hover:bg-white hover:text-black text-white font-black rounded-2xl transition-all transform active:scale-95 shadow-lg shadow-[#2aa090]/20">
                    LANJUT CHECKOUT <i class="fas fa-arrow-right ml-2"></i>
                </button>
            </div>
        </div>
    </form>
</main>

<style>
    /* Styling untuk card yang dipilih */
    .room-radio:checked + div {
        /* CSS ini opsional jika Anda ingin styling tambahan saat terpilih */
    }
    .room-card:has(.room-radio:checked) {
        border-color: #2aa090;
        background-color: rgba(42, 160, 144, 0.05);
        box-shadow: 0 10px 30px -10px rgba(42, 160, 144, 0.2);
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const checkinInput = document.getElementById('checkin');
    const checkoutInput = document.getElementById('checkout');
    const qtyInput = document.getElementById('jumlah_kamar');
    const displayNights = document.getElementById('displayNights');
    const displayTotal = document.getElementById('displayTotal');
    const radios = document.querySelectorAll('.room-radio');

    function calculate() {
        // 1. Hitung Malam
        const start = new Date(checkinInput.value);
        const end = new Date(checkoutInput.value);
        const diffTime = end - start;
        const nights = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

        const nightsValid = nights > 0 ? nights : 0;
        displayNights.innerText = nightsValid + ' Malam';

        // 2. Ambil Harga Kamar yang dipilih
        let harga = 0;
        radios.forEach(r => {
            if(r.checked) harga = parseInt(r.dataset.harga);
        });

        // 3. Kalkulasi Total
        const qty = parseInt(qtyInput.value) || 1;
        const total = harga * nightsValid * qty;

        // 4. Update Tampilan
        displayTotal.innerText = 'Rp ' + total.toLocaleString('id-ID');
    }

    // Event Listeners
    [checkinInput, checkoutInput, qtyInput].forEach(el => el.addEventListener('change', calculate));
    radios.forEach(r => r.addEventListener('change', calculate));

    // Jalankan kalkulasi pertama kali
    calculate();
});
</script>
{% endblock %}
